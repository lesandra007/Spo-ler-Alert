<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_menu_label"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="ITEM MENU"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:textColor="#00b215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Space
        android:id="@+id/item_menu_spacer"
        android:layout_width="16dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/item_menu_label"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grocery_options_show_info"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="#314d29"
        android:text="Show Info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_menu_label" />

    <Button
        android:id="@+id/grocery_options_delete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:backgroundTint="#314d29"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grocery_options_show_info" />

    <Button
        android:id="@+id/grocery_options_edit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:backgroundTint="#314d29"
        android:text="Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grocery_options_delete" />

    <Button
        android:id="@+id/grocery_options_subtract"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="47dp"
        android:backgroundTint="#314d29"
        android:text="Subtract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grocery_options_edit" />


</androidx.constraintlayout.widget.ConstraintLayout>