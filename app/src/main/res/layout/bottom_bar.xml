<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Navigation Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#FEFEFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/grocery_list_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/grocery_icon"
            android:contentDescription="List"
            android:background="@drawable/rounded_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/recipes_bottom_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/recipes_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/recipe_icon"
            android:contentDescription="Groceries"
            android:background="@drawable/rounded_square"
            app:layout_constraintStart_toEndOf="@id/grocery_list_bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/statistics_bottom_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/statistics_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/statistics_icon"
            android:contentDescription="Stats"
            android:background="@drawable/rounded_square"
            app:layout_constraintStart_toEndOf="@id/recipes_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>